<div class="list-group">
<div class="lead"><%= @team[:name] %></div>
  <% @team[:roster].each_with_index do |team, index| %>
     <table class="table table-hover">
      <tr>
        <td class="<%= color_code(index) %> col-md-1"><%= index + 1 %>.</td>
        <td class="<%= color_code(index) %> col-md-3"><b>Player:</b> <%= team[:name] %></td>
        <td class="<%= color_code(index) %> col-md-2"><b>Height:</b>  <%= team[:height] %></a></td>
        <td class="<%= color_code(index) %> col-md-2"><b>Weight:</b>  <%= team[:weight] %></td>
        <td class="<%= color_code(index) %> col-md-2"><b>Position:</b>  <%= team[:position] %></td>
        <td class="<%= color_code(index) %> col-md-2"><b>Jersey:</b>  <%= team[:number] %></td>
        <td class="<%= color_code(index) %> col-md-1"><a href="/rosters/<%= @id.to_i %>/<%= index %>">Edit</a></td>
        <td class="<%= color_code(index) %> col-md-2">
          <form class="delete" action="/rosters/<%= @id.to_i %>/<%= index %>/destroy" method="post">
            <button type="submit" class="btn btn-default">delete</button>
          </form>
        </td>
      <tr>
    </table>
  <% end %>

  <p class="lead"><a href="/teams">Teams List</a></p>
  <p class="lead"><a href="/roster/<%= @id.to_i %>">Add another player</a></p>
</div>

